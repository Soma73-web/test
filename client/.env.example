# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values
# Note: Variables must start with REACT_APP_ to be accessible

# ============================================
# API CONFIGURATION
# ============================================
REACT_APP_API_BASE_URL=http://localhost:5000

# ============================================
# APPLICATION SETTINGS
# ============================================
REACT_APP_APP_NAME=NEET Academy
REACT_APP_APP_VERSION=1.0.0

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable specific features
REACT_APP_ENABLE_CHATBOT=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_LEAD_POPUP=true

# ============================================
# ANALYTICS & TRACKING (Optional)
# ============================================
# Google Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=

# ============================================
# SESSION & SECURITY
# ============================================
# Session timeout in milliseconds (30 minutes = 1800000)
REACT_APP_SESSION_TIMEOUT=1800000

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Set to false to disable source maps in production
GENERATE_SOURCEMAP=true

# ============================================
# BUILD SETTINGS
# ============================================
# React scripts version
SKIP_PREFLIGHT_CHECK=false

# ============================================
# NOTES
# ============================================
# - Variables starting with REACT_APP_ are exposed to the browser
# - Never put sensitive data (API keys, secrets) in frontend env vars
# - For development: npm start
# - For production: npm run build
# - Environment files:
#   * .env (all environments)
#   * .env.local (local development, gitignored)
#   * .env.development (development only)
#   * .env.production (production only)
# - Load order (last wins):
#   1. .env
#   2. .env.development / .env.production
#   3. .env.local
